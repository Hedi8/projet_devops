pipeline {
    agent any


    stages {
          stage('Checkout GIT') {
            steps {
                echo 'Pulling...';
                 git branch: 'raniaBack',
                url : 'https://github.com/Hedi8/projet_devops'
              
            }
        }
        stage('MNV CLEAN') {
            steps {
                sh 'mvn clean'
            }
        }
       stage('MVN COMPILE') {
            steps {
                sh 'mvn compile'
            }
        }
       stage('MVN SONARQUBE') {
            steps {
                sh 'mvn sonar:sonar  -Dsonar.login=admin -Dsonar.password=sonar'
            }
        }
         stage('NEXUS'){
            steps{
                sh 'mvn deploy -DskipStaging=true'
            }
        } 
          stage('Build docker image'){
                         steps{
                                sh 'docker build -t ranianouri/achat .'
 }
              
    }
    stage('Docker login') {

                                                         steps {
                                                            sh 'echo "login Docker ...."'
                                                                	sh 'docker login -u ranianouri -p 123456789'
                                                                            }  }


          stage('Docker push') {

                           steps {
                                sh 'echo "Docker is pushing ...."'
                               	sh 'docker push ranianouri/achat'
                                  }  }
            stage("Docker-compose") {
                steps{
                    sh 'docker-compose up -d'
                }
        }                      
}
}
